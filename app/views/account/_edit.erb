<%- @extension ||= extension %>
<% email_content = capture do %><%= text_field :extension, :email %><% end %>
<%= raw slot.option( raw(email_content),
    :name=>"email", 
    :help=>"email address for account", #ENGLISH
    :label=>"Email") %>
    
<% password_content = capture do %><%= password_field :extension, :password %><% end %>
<%= raw slot.option( password_content,
    :name=>"password", 
    :help=> card.type_id==Card::UserID ? "If left blank, password will remain the same" : '', #ENGLISH
    :label=>"Password") %>

<% password_conf_content = capture do %><%= password_field :extension, :password_confirmation %><% end %>
<%= raw slot.option( password_conf_content,
    :name=>"password_confirm", 
    :help=>"", #ENGLISH
    :label=>"Confirm password") %> 

<% if card.type_id==Card::UserID and User.ok?(:administrate_users)  %>
  <% blocked_content = capture do %><%= check_box :extension, :blocked? %><% end %>
  <%= raw slot.option( blocked_content,
     :name=>"block_user", 
     :help=>"Blocking a user prevents them from signing in", #ENGLISH
     :label=>"Block") %>
<% end %>

