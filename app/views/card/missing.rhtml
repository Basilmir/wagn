<% cardname = (params[:card] ? params[:card][:name] : "") %>
<h1 class="page-header">Missing Card</h1>

<%# wrap_slot(get_slot(Card.new(:skip_defaults=>true))) do |slot| %>
<% wrap_slot do |slot| %>
  <div class="content instruction">
    <p>There's no card named <strong><%= cardname %></strong>.</p> <%#ENGLISH%>
    <p><%= link_to "Sign In", '/account/signin' %> or <%= link_to 'Sign Up', '/account/signup' %> to create it.</p>
  </div>
<% end %>


