<%= wrap_slot do |slot| %>
  <%= raw slot.header %>
  <%= form_for :card, :url=>slot.path(:remove),
    :html => { :remote=>true, :class=>'standard-slotter', 'data-type'=>'html' } do |f| %>
    
    <%= hidden_field_tag 'confirm_destroy', 'true' %>
    <%= hidden_field_tag 'redirect', 'TO_REDIRECT' %>
    
    <div class="content open-content">
      <p>Really remove <%= link_to_page formal_title(card), card.name %>?</p> <%#ENGLISH%>
      <% if dependents = card.dependents and !dependents.empty? %>
        <p>That would mean removing all these cards, too:</p>
        <ul>
          <% dependents.map do |dep| %>
            <li><%= link_to_page dep.name %>
          <% end. join ', ' %>
        </ul>
      <% end %>
      <%= raw error_messages_for( @card ) %>
      
      <%= submit_tag 'Yes, do it', :class=>'remove-submit-button' %>
      <%= button_tag 'Cancel', :class=>'remove-cancel-button standard-slotter', :type=>'button', :href=>slot.path(:view) %>
    
      <%= raw slot.notice %>
    </div>
  <% end %>
<% end %>
