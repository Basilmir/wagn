<% wrap_slot do |slot| %>
  <%= raw slot.header %>
  <style><%= ".SELF-#{card.css_name} .edit-area .namepart-#{card.css_name} { display: none; }" %></style>

  <%= div( :class=>'card-body') do %>
    <%= raw slot.render_partial "card/edit/#{@attribute}", :locals=>{:slot=>slot} %>
  <% end %>

  <%= raw slot.notice %>
<% end %>
