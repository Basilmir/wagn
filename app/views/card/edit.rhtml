<% hard_template = card.hard_template %>

<% get_slot.wrap( 'edit' ) do |slot| %>  
	<%= slot.header %>
	<style><%= ".cardid-#{card.id} .edit-area .title-#{css_name(card.name)} { display: none; }" %></style>

  <% div( :id=>slot.id('card-body'), :class=>'card-body') do %>  
    <%= slot.render_partial 'edit_content' %>
  <% end %>
	
	<%= slot.notice %>

<% end %>