<% hard_template = @card.hard_template %>

<% get_slot.wrap( 'edit' ) do |slot| %>  
	<%= slot.header %>
	<style><%= ".SELF-#{@card.key.css_name} .edit-area .title-#{@card.name.css_name} { display: none; }" %></style>

  <% div( :id=>slot.id('card-body'), :class=>'card-body') do %>  
    <%= slot.render_partial 'card/edit/content' %>
  <% end %>
	
	<%= slot.notice %>

<% end %>