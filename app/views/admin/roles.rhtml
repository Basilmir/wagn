<h1>Role Administration</h1>

<%= render :partial=>'block/options' %>

<span id='create-button'>
  <% if Card::Role.ok? :create %>
    <%= link_to 'Create New Role', { :controller=>'card', :action=>'new', 'card[type]'=>'Role'} %> 
  <% end %>
</span>

<div id="roles-list" class="card-list"></div>

<script>
  function init_lister() {
    lister = new Wagn.Lister('roles-list');
    lister.cardtype('Role');
    return lister;
  }
</script>

