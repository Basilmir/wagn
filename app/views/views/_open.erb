<%= raw slot.header %>  
<%= raw slot.notice %>
<%= raw slot.wrap_content( :open, raw(slot._render_open_content) ) %>

<% if card.ok?(:comment) %>
  <div class="comment-box">
  <%= form_for :card, :url=>slot.path(:comment), :remote=>:true, :html=> { :class=>'standard-slotter' } do |f| %>
    <%= f.text_area :comment, :rows=>3 %><br/>
    <% if User.current_user.login == "anon" %>
      <% card.comment_author= (slot.session[:comment_author] || params[:comment_author] || "Anonymous") %> <%#ENGLISH%>
      <label>My Name is:</label>
      <%= f.text_field :comment_author %> 
    <% end %>
    <input type="submit" value="Comment"/>
  <% end %>
  </div>
<% end %>

<%= raw slot.footer %>
