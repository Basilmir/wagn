<div class="exception">
  <h2>Denied!</h2> <%#ENGLISH%>
  <p><%= @exception.message %>.</p>
  <% if User.current_user.login=='anon' %>
    <p>
      <%= link_to 'Sign in', :controller=>'account', :action=>'signin' %>
      <% if Card.new(:typecode=>'InvitationRequest').ok?(:create) %>
        or <%= link_to 'Sign up', :controller=>'account', :action=>'signup'%>
      <% end %>
    </p>
  <% end %>
  <p><em>403 Forbidden</em></p>
</div>

